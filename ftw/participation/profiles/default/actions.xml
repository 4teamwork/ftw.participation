<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <object name="object_buttons" meta_type="CMF Action Category">

    <object name="invite_participants" meta_type="CMF Action"
            i18n:domain="egov.participation">
      <property name="title" i18n:translate="">Invite participants</property>
      <property i18n:translate=""
                name="description">Invite other participants</property>
      <property
          name="url_expr">string:${here/absolute_url}/@@invite_participants</property>
      <property name="icon_expr"></property>
      <property name="available_expr"></property>
      <property name="permissions">
        <element value="Sharing page: Delegate roles"/>
      </property>
      <property name="visible">True</property>
    </object>

  </object>
  <object name="user" meta_type="CMF Action Category">

    <object name="invitations" meta_type="CMF Action"
            i18n:domain="egov.participation">
      <property name="title" i18n:translate="">My Invitations</property>
      <property i18n:translate=""
                name="description">My Invitaitons</property>
      <property
          name="url_expr">string:${here/portal_url}/@@invitations</property>
      <property name="icon_expr"></property>
      <property name="available_expr"></property>
      <property name="permissions">
        <element value="View"/>
      </property>
      <property name="visible">True</property>
    </object>

  </object>

</object>
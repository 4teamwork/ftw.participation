<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"

      i18n:domain="ftw.participation">

  <body>
    <div metal:fill-slot="main">
      <metal:main-macro define-macro="main">

        <h1 i18n:translate="headline_participants" class="documentFirstHeading">
          Participants of
          <tal:title i18n:name="title">
            &laquo;<span tal:replace="here/Title" />&raquo;
          </tal:title>
        </h1>

        <metal:form-macro define-macro="form">

          <fieldset>
            <legend i18n:translate="legend_new_participant">New participant</legend>
            <p i18n:translate="text_participation_invite">
              Invite new people to this area and give them permissions to read, add, edit. or manage content.
            </p>

            <form tal:attributes="action string:${here/absolute_url}/@@invite_participants">
              <input type="submit" name="form.invite" value="Invite participants"
                     i18n:attributes="value link_invite_participants" />
            </form>
          </fieldset>


          <fieldset>
            <legend i18n:translate="legend_delete_participant">Delete participant</legend>
            <p i18n:translate="text_participation_delete">
              Remove a participant
            </p>


            <form action="" method="post"
                  tal:attributes="action form_action|string:${here/absolute_url}/@@participants">

              <div id="participants" tal:repeat="item view/get_participants">

                <div class="participant">
                  <input type="checkbox" name="userids:list"
                         tal:attributes="value item/userid;
                                         id string:box_${item/userid};
                                         disabled item/readonly;" />
                  <label tal:attributes="for string:box_${item/userid}"
                         tal:content="item/name" />
                </div>

              </div>

              <input type="submit" name="form.delete" value="Delete Participants"
                     class="context"
                     i18n:attributes="value button_delete_participants" />

              <input type="submit" name="form.cancel" value="Cancel"
                     i18n:attributes="value button_cancel"
                     tal:condition="not:hide_cancel_button|nothing" />

            </form>
        </fieldset>
        </metal:form-macro>

      </metal:main-macro>
    </div>
  </body>
</html>
